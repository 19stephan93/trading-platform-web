{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "rxjs/*": [
        "../node_modules/rxjs/*"
      ],
      "@odin/ngx.core": [
        "../../odin.ngx.core/src/index.ts"
      ]
      // "@odin/ngx.shared": [
      //   "../../odin.ngx.shared/src/index.ts"
      // ]
    },
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": []
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "./**/*.ts",
    "../../odin.ngx.core/src/index.ts",
    // "../../odin.ngx.shared/src/index.ts"
  ]
}
